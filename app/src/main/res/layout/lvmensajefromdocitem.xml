<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblHeader"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:background="@drawable/msgheaderbackground"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/msgfromdocbackground"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="75dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:layout_below="@+id/lblHeader">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblFechaHora"
                android:textSize="12sp"
                android:textColor="#21233F"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblMensaje"
                android:textSize="14sp"
                android:textColor="#000000"
                android:minLines="1" />
        </LinearLayout>
</RelativeLayout>